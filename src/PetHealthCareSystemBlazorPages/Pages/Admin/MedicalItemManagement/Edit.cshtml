@page
@model PetHealthCareSystemRazorPages.Pages.Admin.MedicalItemManagement.EditModel

@{
    ViewData["Title"] = "Edit Medical Item";
}

<h1>Edit Medical Item</h1>

<h4>Medical Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicalItem.Name" class="control-label"></label>
                <input asp-for="MedicalItem.Name" class="form-control" />
                <span asp-validation-for="MedicalItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.Description" class="control-label"></label>
                <input asp-for="MedicalItem.Description" class="form-control" />
                <span asp-validation-for="MedicalItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalItem.Price" class="control-label"></label>
                <input asp-for="MedicalItem.Price" class="form-control" />
                <span asp-validation-for="MedicalItem.Price" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="MedicalItem.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@page
@model PetHealthCareSystemRazorPages.Pages.Staff.BookingTransaction.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <!-- Display other transaction details as needed -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.PaymentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.PaymentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.PaymentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.PaymentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.PaymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.PaymentNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.PaymentNote)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.RefundPercentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.RefundPercentage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.RefundPaymentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.RefundPaymentId)
        </dd>
        @foreach (var item in Model.Transaction.TransactionDetails)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.SubTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.SubTotal)
            </dd>
        }
        <!-- Display other transaction properties -->
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Transaction.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

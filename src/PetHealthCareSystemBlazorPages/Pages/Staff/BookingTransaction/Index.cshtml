@page
@model PetHealthCareSystemRazorPages.Pages.Staff.BookingTransaction.IndexModel

@{
    ViewData["Title"] = "BookingTransaction";
}

<div style="width:100%; height:100vh; display:flex; justify-content:center; flex-direction:column ">
    <h1 style="text-align:center">BookingTransaction</h1>

    <p style="width:140px;border-radius:20px;border:1px solid black;text-align:center">
        <a style="color: black" asp-page="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Payment Date
                </th>
                <th>
                    Payment Method
                </th>
                <th>
                    Payment Id
                </th>
                <th>
                    Payment Staff Name
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Created By Name
                </th>
                <th>
                    Last Updated By Name
                </th>
                <th>
                    Created Time
                </th>
                <th>
                    Last Updated Time
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transactions.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentStaffName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedByName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdatedByName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdatedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a style="color: black" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a style="color: black" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pager">
        @if (Model.Transactions.HasPreviousPage)
        {
            <a style="color:black" asp-page="Index" asp-route-pageNumber="@(Model.Transactions.PageNumber - 1)" asp-route-pageSize="@Model.Transactions.TotalPages">Previous</a>
        }
        @if (Model.Transactions.HasNextPage)
        {
            <a style="color:black" asp-page="Index" asp-route-pageNumber="@(Model.Transactions.PageNumber + 1)" asp-route-pageSize="@Model.Transactions.TotalPages">Next</a>
        }
    </div>
</div>

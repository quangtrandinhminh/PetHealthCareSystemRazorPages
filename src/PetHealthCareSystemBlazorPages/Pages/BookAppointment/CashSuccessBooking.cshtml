@page
@model PetHealthCareSystemRazorPages.Pages.BookAppointment.CashSuccessBookingModel
@{
    ViewData["Title"] = "Successful Book Appointment";
}

<style>
    .success-booking-container {
        margin-top: 100px;
        text-align: center;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        background-color: #f9f9f9;
        max-width: 600px;
        margin: auto;
    }

    .success-message {
        font-size: 24px;
        font-weight: bold;
        color: #28a745;
        margin-bottom: 20px;
    }

    .redirect-button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
    }

        .redirect-button:hover {
            background-color: #0056b3;
        }
</style>

<div class="success-booking-container">
    <div class="success-message">
        Your appointment has been successfully booked!
    </div>
    <a href="/Customer/AppointmentManagement/AppointmentList" class="redirect-button">Go to Appointment List</a>
</div>
